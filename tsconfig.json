{
	"extends": "@tsconfig/strictest/tsconfig.json",
	"compilerOptions": {
		"lib": ["es2017", "ESNext", "dom", "DOM.Iterable"],
		"outDir": "dist",
		"removeComments": true,
		"target": "ES6",
		"module": "esnext",
		"moduleResolution": "node",
		"exactOptionalPropertyTypes": false,
		"resolveJsonModule": true
	}
}
